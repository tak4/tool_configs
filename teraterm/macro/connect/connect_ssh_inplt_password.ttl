;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
;接続情報
USERNAME = 'username'				; ログインするユーザー名
HOSTADDR = 'xxx.xxx.xxx.xxx'			; 接続先
INIFILE  = "sample_setting.ini" 	; INIファイル
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

msg = 'Enter password for user '
strconcat msg USERNAME
;passwordbox パスワードボックスを表示し、入力された内容が システム変数 <inputstr> に格納される
passwordbox msg 'Get password'
;messagebox msg 'debug'
;messagebox inputstr 'inputstr'

;マクロのあるディレクトリパスを取得
getdir macro_dir

;接続パラメータを作成
COMMAND = HOSTADDR
strconcat COMMAND ':22 /ssh /auth=password /user='
strconcat COMMAND USERNAME
strconcat COMMAND ' /passwd='
strconcat COMMAND inputstr
strconcat COMMAND ' /f='
strconcat COMMAND macro_dir
strconcat COMMAND '\inifile\'
strconcat COMMAND INIFILE

;接続
connect COMMAND

